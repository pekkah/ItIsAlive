<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@this.ViewBag.Title</title>
        <link href="@this.Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@this.Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>
        <script src="@this.Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"> </script>
    </head>
    <body>
        <div class="page">
            <header>
                <div id="title">
                    <h1>My MVC Application</h1>
                </div>
                <div id="logindisplay">
                    @this.Html.Partial("_LogOnPartial")
                </div>
                <nav>
                    <ul id="menu">
                        <li>@this.Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@this.Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </nav>
            </header>
            <section id="main">
                @this.RenderBody()
            </section>
            <footer>
            </footer>
        </div>
    </body>
</html>
